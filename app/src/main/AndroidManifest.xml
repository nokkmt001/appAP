<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.anphat.supplier">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CALL_PHONE" />
    <uses-permission
        android:name="android.permission.LOCATION_HARDWARE"
        tools:ignore="ProtectedPermissions" /> <!-- Ung dung chay duoi nen -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- Install -->
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" /> <!-- Screen share -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <!--        android:largeHeap="true"-->

    <application
        android:name=".utils.AppController"
        android:allowBackup="false"
        android:foregroundServiceType="mediaProjection"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher_main_round"
        android:label="@string/app_name"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.NoActionBar"
        android:usesCleartextTraffic="true"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="m">
        <activity
            android:name=".ui.account.EditAccountActivity"
            android:exported="false"
            android:screenOrientation="fullSensor" />
        <activity
            android:name=".ui.address.PlaceActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.address.ChangeAddressActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".utils.adapterimage.ViewImageActivity"
            android:exported="false"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.splash.SplashActivity"
            android:exported="true"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
        <activity
            android:name=".ui.main.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.login.register.CreateNewCustomerActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"
            android:exported="false"/>
        <activity
            android:name=".ui.login.checkidpass.CheckLoginByIDPassActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.login.checkphone.CheckPhoneActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.cart.CartActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.booking.BookingActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.login.inputotp.InputOtpActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.pay.history.vote.VoteEmployeeActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.introduce.IntroduceActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".utils.adapterimage.ActivityImage"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.map.mapcty.MapCustomerActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.login.forgetpass.ForgetPassActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.product.review.ReViewBookingActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.home.choose.FullCategoryActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.product.full.ChooseProductActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity
            android:name=".ui.notification.NotificationActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity android:name=".ui.login.checkphone.CheckPhoneForgetPassActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity android:name=".ui.notification.NotificationDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity android:name=".ui.pay.history.HistoryDetailActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>
        <activity android:name=".ui.login.forgetpass.ChangePassActivity"
            android:screenOrientation="portrait"
            android:exported="false"/>

        <service
            android:name=".service.FirebaseService"
            android:enabled="true"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>