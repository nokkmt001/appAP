<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/layoutHeader"
        layout="@layout/layout_header_category" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/layoutHeader" />

    <TextView
        android:id="@+id/textMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/rcl"
        style="@style/AppTheme.TextViewSize16"
        android:layout_margin="@dimen/dp_5"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="@dimen/dp_5"
        android:background="@drawable/bg_button_light_radius_5"
        android:text="@string/title_all_category"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rclFull"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/textMain" />

</androidx.constraintlayout.widget.ConstraintLayout>
