        android:minHeight="@dimen/dp_30"
        android:background="@color/colorTransparent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginBottom="@dimen/dp_5"
        style="@style/AppTheme.TextView"/>

</LinearLayout>