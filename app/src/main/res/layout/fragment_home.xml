<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/layoutContainer"
    android:background="@color/White">

    <include layout="@layout/layout_search"/>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/layoutSearch"
                layout="@layout/layout_search"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/layoutLike"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    style="@style/AppTheme.TextViewSize16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:fontFamily="@font/myriadpro_boldit"
                    android:text="Yêu thích"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/layoutConfig"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:visibility="gone"
                    android:background="@drawable/table_content_cell_radius_2"
                    android:orientation="horizontal"
                    android:padding="@dimen/dp_3">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:src="@drawable/ic_setting" />

                    <TextView
                        style="@style/AppTheme.TextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginStart="@dimen/dp_5"
                        android:text="Tùy chỉnh" />

                </LinearLayout>

            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rclCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_5"
                android:layout_marginEnd="@dimen/dp_5"
                android:background="@drawable/table_content_cell_radius_5_white_1"
                android:orientation="horizontal"
                android:padding="@dimen/dp_5"
                tools:itemCount="4"
                tools:listitem="@layout/item_category_main" />

            <com.tiha.anphatsu.utils.AutoScrollRecyclerView
                android:id="@+id/rclImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_10"
                android:visibility="gone"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <LinearLayout
                android:id="@+id/layoutBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:background="@drawable/bg_button_light_radius_2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textBranch"
                    style="@style/AppTheme.TextView"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:layout_margin="@dimen/dp_1"
                    android:background="@drawable/bg_button_white_radius_2"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:gravity="left|center"
                    android:paddingStart="@dimen/dp_10"
                    android:text="Text"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/myriadpro_boldit"
                style="@style/AppTheme.TextViewSize16"
                android:textStyle="bold"
                android:layout_margin="@dimen/dp_5"
                android:text="Khuyến mãi"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rclMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_5"
                android:visibility="visible"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
