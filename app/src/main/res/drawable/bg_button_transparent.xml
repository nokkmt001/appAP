<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <!--<stroke android:width="1dip" android:color="#6eb7ec" />-->
            <gradient android:angle="-90" android:endColor="@color/colorButton_background_transparent_selected" android:startColor="@color/colorButton_background_transparent_selected" />
            <!--<gradient  android:angle="-90"  android:startColor="#a11005" android:endColor="#d62608"  />-->
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="0dp" />
            <stroke android:width="1dip" android:color="@color/colorButton_background_transparent_selected" />
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!--Bo tron-->
            <corners android:radius="0dp" />
            <!--Vien-->
            <stroke android:width="1dip" android:color="@color/colorButton_background_transparent_default" />
            <gradient android:angle="-90" android:endColor="@color/colorButton_background_transparent_default" android:startColor="@color/colorButton_background_transparent_default" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/button_radius" />
            <!--<stroke android:width="1dip" android:color="#6eb7ec" />-->
            <gradient
                android:angle="-90"
                android:endColor="@color/colorButton_background_dark_default_disable"
                android:startColor="@color/colorButton_background_dark_default_disable" />
            <!--<gradient  android:angle="-90"  android:startColor="#a11005" android:endColor="#d62608"  />-->
        </shape>
    </item>
</selector>