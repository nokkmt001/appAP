<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="true" android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorEditText_noedit_dropdownlist_background_selected" />
            <stroke android:width="@dimen/edittext_border_width" android:color="@color/colorEditText_noedit_dropdownlist_border_selected" />
            <corners android:bottomLeftRadius="@dimen/edittext_radius" android:bottomRightRadius="@dimen/edittext_radius" android:topLeftRadius="@dimen/edittext_radius" android:topRightRadius="@dimen/edittext_radius" />
        </shape>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/colorEditText_noedit_dropdownlist_background_selected" />
            <stroke android:width="@dimen/edittext_border_width" android:color="@color/colorEditText_noedit_dropdownlist_border_selected" />
            <corners android:bottomLeftRadius="@dimen/edittext_radius" android:bottomRightRadius="@dimen/edittext_radius" android:topLeftRadius="@dimen/edittext_radius" android:topRightRadius="@dimen/edittext_radius" />
        </shape>
    </item>
    <item android:state_enabled="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <!--background-->
            <solid android:color="@color/colorEditText_noedit_dropdownlist_background_default" />
            <!--border-->
            <stroke android:width="@dimen/edittext_border_width" android:color="@color/colorEditText_noedit_dropdownlist_border_default" />
            <!--bo tron-->
            <corners android:bottomLeftRadius="@dimen/edittext_radius" android:bottomRightRadius="@dimen/edittext_radius" android:topLeftRadius="@dimen/edittext_radius" android:topRightRadius="@dimen/edittext_radius" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/edittext_radius" />
            <!--<stroke android:width="1dip" android:color="#6eb7ec" />-->
            <gradient
                android:angle="-90"
                android:endColor="@color/colorEditText_background_disable"
                android:startColor="@color/colorEditText_background_disable" />
            <stroke android:width="@dimen/edittext_border_width" android:color="@color/colorEditText_border_disable" />
            <!--<gradient  android:angle="-90"  android:startColor="#a11005" android:endColor="#d62608"  />-->
        </shape>
    </item>
</selector>
