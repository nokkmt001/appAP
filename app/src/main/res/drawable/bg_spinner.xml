<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools">

    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:padding="10dp" android:shape="rectangle">
                    <solid android:color="@color/colorSpinner_background_selected" />
                    <stroke android:width="1dp" android:color="@color/colorSpinner_border_selected" />
                    <corners android:bottomLeftRadius="@dimen/spinner_radius" android:bottomRightRadius="@dimen/spinner_radius" android:topLeftRadius="@dimen/spinner_radius" android:topRightRadius="@dimen/spinner_radius" />
                </shape>
            </item>
            <!--<item android:right="10dp" android:drawable="@drawable/ic_arrow_drop_down" android:gravity="center_horizontal|right" ></item>-->
        </layer-list>
    </item>
    <item android:state_enabled="true" android:state_focused="true">
        <layer-list>
            <item>
                <shape android:padding="10dp" android:shape="rectangle">
                    <solid android:color="@color/colorSpinner_background_selected" />
                    <stroke android:width="1dp" android:color="@color/colorSpinner_border_selected" />
                    <corners android:bottomLeftRadius="@dimen/spinner_radius" android:bottomRightRadius="@dimen/spinner_radius" android:topLeftRadius="@dimen/spinner_radius" android:topRightRadius="@dimen/spinner_radius" />
                </shape>
            </item>
            <!--<item android:right="10dp" android:drawable="@drawable/ic_arrow_drop_down" android:gravity="center_horizontal|right" ></item>-->
        </layer-list>
    </item>
    <item android:state_enabled="true">
        <layer-list>
            <item>
                <shape android:padding="10dp" android:shape="rectangle">
                    <!--border-->
                    <stroke android:width="1dp" android:color="@color/colorSpinner_border_default" />
                    <!--background-->
                    <solid android:color="@color/colorSpinner_background_default" />
                    <!--bo tron-->
                    <corners android:bottomLeftRadius="@dimen/edittext_radius" android:bottomRightRadius="@dimen/edittext_radius" android:topLeftRadius="@dimen/edittext_radius" android:topRightRadius="@dimen/edittext_radius" />
                </shape>
            </item>
            <!--<item android:right="10dp" android:drawable="@drawable/ic_arrow_drop_down" android:gravity="center_horizontal|right" ></item>-->
        </layer-list>
    </item>

</selector>