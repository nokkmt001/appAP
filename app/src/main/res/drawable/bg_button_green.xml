                android:angle="-90"
                android:endColor="@color/colorButton_background_green_default_disable"
                android:startColor="@color/colorButton_background_green_default_disable" />
            <!--<gradient  android:angle="-90"  android:startColor="#a11005" android:endColor="#d62608"  />-->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <!--Bo tron-->
            <corners android:radius="@dimen/button_radius" />
            <!--Vien-->
            <!--<stroke android:width="1dip" android:color="#6eb7ec" />-->
            <gradient
                android:angle="-90"
                android:endColor="@color/colorButton_background_green_default"
                android:startColor="@color/colorButton_background_green_default" />
        </shape>
    </item>
</selector>